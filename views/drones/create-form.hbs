<h2>Create a new drone</h2>
<form method="POST" action="/drones/create">
  <div class="form-group">
    <label for="todoName">Name</label>
    <input name="name" type="text" class="form-control" id="DroneName">
  </div>
  <div class="form-group">
    <label for="todoDescription">Propellers</label>
    <input name="propellers" type="text" class="form-control" id="DronePropellers">
  </div>
   <div class="form-group">
    <label for="todoDescription">MaxSpeed</label>
    <input name="maxSpeed" type="text" class="form-control" id="DroneSpeed">
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
<a href="/drones">
        <button type="submit" class="btn btn-primary"> Back</button>
</a>
{{#if successDrone}}
    <div>
        <p>New drone added:</p>
        <p>Name: {{Dronecreated.name}}</p>
        <p>Propellers: {{Dronecreated.propellers}}</p>
        <p>Max Speed: {{Dronecreated.maxSpeed}}</p>
    </div>
{{/if}}